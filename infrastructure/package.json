{
  "name": "jobdock-infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK infrastructure for JobDock",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "npx aws-cdk",
    "deploy:dev": "npx aws-cdk deploy JobDockStack-dev --require-approval never",
    "deploy:staging": "npx aws-cdk deploy JobDockStack-staging --require-approval never",
    "deploy:prod": "npx aws-cdk deploy JobDockStack-prod --context env=prod --require-approval any-change",
    "destroy:dev": "npx aws-cdk destroy JobDockStack-dev",
    "diff:dev": "npx aws-cdk diff JobDockStack-dev",
    "synth:dev": "npx aws-cdk synth JobDockStack-dev"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "aws-cdk": "^2.120.0",
    "esbuild": "^0.27.0",
    "typescript": "~5.3.0"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.120.0",
    "constructs": "^10.3.0"
  }
}
