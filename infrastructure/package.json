{
  "name": "jobdock-infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK infrastructure for JobDock",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "npx aws-cdk",
    "deploy:dev": "node deploy-with-env.js deploy JobDockStack-dev --require-approval never",
    "deploy:staging": "node deploy-with-env.js deploy JobDockStack-staging --require-approval never",
    "deploy:prod": "node deploy-with-env.js deploy JobDockStack-prod --context env=prod --require-approval never",
    "destroy:dev": "node deploy-with-env.js destroy JobDockStack-dev",
    "diff:dev": "node deploy-with-env.js diff JobDockStack-dev",
    "synth:dev": "node deploy-with-env.js synth JobDockStack-dev"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "aws-cdk": "^2.1108.0",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.0",
    "typescript": "~5.3.0"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.240.0",
    "constructs": "^10.3.0"
  }
}
